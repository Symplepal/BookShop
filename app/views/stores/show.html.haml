%p#notice= notice
%p
  %h2
    = @store.name
%p
  %h2
    = @store.address
%table.table.table-striped
  %thead
    %tr
      %th Könyv
      %th Raktáron
      %th{:colspan => "3"}
  %tbody
    - @store.book_stores.each do |book_store|
      %tr
        %td
          =link_to book_store.book.title, book_store.book
        %td= book_store.quantity
-if can? :manage, @store
  %td= link_to 'Bolt szerkesztése', edit_store_path(@store, form: 'store')
  %td= link_to 'Raktár módosítása', edit_store_path(@store, form: 'inventory')

|
= link_to 'Vissza', stores_path
